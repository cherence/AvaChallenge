<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="22dp"
    android:paddingRight="22dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.cher.avarecorder.MainActivity">

    <ImageView
        android:id="@+id/microphone_iV_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/microphone"/>

    <ImageView
        android:id="@+id/play_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_circle"
        android:layout_below="@+id/microphone_iV_id"
        android:layout_alignParentLeft="true"/>

    <ImageView
        android:id="@+id/record_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/record_circle"
        android:layout_below="@+id/microphone_iV_id"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/stop_button_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/stop_circle"
        android:layout_below="@+id/microphone_iV_id"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
